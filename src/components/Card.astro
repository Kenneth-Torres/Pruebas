---
export interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  iconSrc?: string;
  iconBg?: string;
  category?: string;
  cardBg?: string;
}

const {
  title = "Unsplash",
  subtitle = "Free High-Resolution Stock Photos",
  description = "Find beautiful free images to elevate your designs.",
  iconSrc = "/unsplash-icon.png",
  iconBg = "#000000",
  cardBg = "linear-gradient(135deg, rgba(45, 45, 55, 0.8) 0%, rgba(35, 35, 45, 0.8) 100%)",
} = Astro.props;
---

<div
  class=`relative p-6 w-72 min-h-[220px] flex flex-col gap-6 rounded-2xl border border-white/10 cursor-pointer overflow-hidden transition-all duration-300 ease-in-out backdrop-blur-md hover:-translate-y-1 hover:border-white/15 hover:shadow-2xl ${cardBg}`
>
  <!-- Overlay efecto de brillo/sombra -->
  <div
    class="absolute inset-0 pointer-events-none bg-gradient-to-br from-white/5 via-white/2 to-black/5"
  >
  </div>

  <!-- Icono -->
  <div
    class="w-14 h-14 rounded-xl flex items-center justify-center flex-shrink-0 relative z-10"
    style={`background-color: ${iconBg}`}
  >
    <img
      src={iconSrc}
      alt={`${title} icon`}
      class="w-8 h-8 object-contain brightness-110"
    />
  </div>

  <!-- Contenido -->
  <div class="relative z-10 flex flex-col gap-3 p-4 h-32"> 
  <!-- Contenido principal -->
  <div class="flex-1 flex flex-col gap-1">
    <h3 class="text-white text-lg font-bold leading-snug">{title}</h3>
    <p class="text-sm font-medium text-slate-400">{subtitle}</p>
    <p class="text-xs text-slate-500 opacity-90 leading-relaxed">{description}</p>
  </div>

  <!-- BotÃ³n abajo a la derecha -->
  <div class="flex justify-end mt-auto">
    <button
      class="inline-flex -mx-7 my-2 w-20 h-7 items-center justify-center gap-2 bg-black text-white font-medium rounded-full hover:bg-gray-800 active:bg-gray-900 transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2"
    >
      <span>Web</span>
      <i data-feather="arrow-up-right" class="w-4 h-4  text-black bg-white rounded-full"></i>
    </button>
  </div>
</div>
</div>
