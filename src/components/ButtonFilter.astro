---
interface Props{
    label: string;
    isActive?: boolean;
}

const {label, isActive = false} = Astro.props
---
<button
    data-filter={label}
    class={`filter-btn relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium rounded-lg transition-all duration-300 ease-in-out focus:outline-none ${
        isActive 
        ? 'text-white bg-gradient-to-br from-purple-600 to-blue-500 shadow-lg shadow-purple-500/25' 
        : 'text-gray-300 bg-slate-800/50 hover:bg-gradient-to-br hover:from-purple-600/20 hover:to-blue-500/20 hover:text-white border border-slate-700/50 hover:border-purple-500/30'
    }`}
>
    <span
        class={`relative px-5 py-2.5 transition-all ease-in duration-200 rounded-md ${
            isActive 
            ? 'bg-transparent' 
            : 'bg-slate-800/80 group-hover:bg-transparent'
        }`}
    >
        {label}
    </span>
</button>
