---
// src/layouts/AppLayout.astro
import Sidebar from '../components/Sidebar/Sidebar.astro';
import '../styles/global.css'

export interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "Workly - Your productivity workspace" 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div class="flex">
      <Sidebar />
      
      <!-- Overlay para móvil -->
      <div 
        id="overlay" 
        class="fixed inset-0 bg-black bg-opacity-50 z-20 hidden md:hidden overlay-blur"
      ></div>
      
      <!-- Contenido principal con margen para el sidebar -->
      <main class="flex-1 ml-0 md:ml-72 min-h-screen bg-[var(--bg)] transition-all duration-300">
        <div class="p-6">
          <slot />
        </div>
      </main>
      
      <!-- Botón de menú móvil -->
      <button
        id="mobile-menu-button"
        class="fixed top-4 left-4 z-40 md:hidden p-2 rounded-lg bg-[var(--card)] border border-[var(--border)] text-[var(--text)]"
        aria-label="Abrir menú"
      >
        <i data-feather="menu" class="w-5 h-5"></i>
      </button>
      
      <!-- Botón para cerrar sidebar en móvil -->
      <button
        id="close-sidebar"
        class="fixed top-4 right-4 z-40 md:hidden p-2 rounded-lg bg-[var(--card)] border border-[var(--border)] text-[var(--text)]"
        style="display: none;"
      >
        <i data-feather="x" class="w-5 h-5"></i>
      </button>
    </div>

    <!-- <script>
      document.addEventListener('DOMContentLoaded', () => {
        if (typeof feather !== 'undefined') {
          feather.replace();
        }
      });
    </script> -->
  </body>
</html>