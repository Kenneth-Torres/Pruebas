---
import Layout from "../layouts/Layout.astro";
import UnsplashCard from "../components/Card.astro";
import Search from "../components/Search.astro";
import ButtonFilter from "../components/ButtonFilter.astro";

// Definir el tipo de las cards
interface Card {
  id: number;
  title: string;
  subtitle: string;
  description: string;
  iconSrc: string;
  iconBg: string;
  cardBg: string;
  category: string;
  url: string;
}

// Cargar datos del archivo JSON
let cards: Card[] = [];

try {
  const response = await import("../data/Backend.json");
  const data = response.default || response;
  cards = data.cards || [];
} catch (error) {
  console.error("Error cargando JSON:", error);
  cards = [];
}

// Obtener categor√≠as √∫nicas
const categories = ['Todos', ...Array.from(new Set(cards.map(card => card.category)))];
---

<Layout
  title="DevVault - Recursos y herramientas para desarrollo Backend"
>
  <div class="max-w-[1400px] mx-auto px-4 md:px-0">
    <!-- Header -->
    <header class="mb-10">
      <div class="mt-7">
        <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">
          üîß BackEnd Resources
        </h1>
        <p class="text-gray-400 mb-6">
          Tecnolog√≠as del servidor, bases de datos y herramientas para construir APIs robustas y escalables.
        </p>
        <Search />
      </div>

      <div class="flex flex-wrap gap-2 mt-6">
        {categories.map(category => (
          <ButtonFilter label={category} />
        ))}
      </div>
    </header>

    <!-- Contador de recursos -->
    <section class="mb-6">
      <div class="flex items-center justify-between">
        <h2 class="text-2xl md:text-3xl font-semibold text-white">
          Recursos (<span id="resource-count">{cards.length}</span>)
        </h2>
        <button 
          id="clear-filters"
          class="text-sm text-gray-400 hover:text-white transition-colors duration-200 hidden"
        >
          Limpiar filtros
        </button>
      </div>
    </section>

    <!-- Recursos Grid -->
    <section>
      <div
        id="cards-container"
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
      >
        {cards.map((card) => (
          <div class="card-item" data-category={card.category} data-title={card.title.toLowerCase()} data-description={card.description.toLowerCase()}>
            <UnsplashCard
              title={card.title}
              subtitle={card.subtitle}
              description={card.description}
              iconSrc={card.iconSrc}
              iconBg={card.iconBg}
              cardBg={card.cardBg}
              category={card.category}
              url={card.url}
            />
          </div>
        ))}
      </div>

      <!-- Mensaje cuando no hay resultados -->
      <div id="no-results" class="hidden text-center py-16">
        <div class="mb-6">
          <i data-feather="search" class="w-16 h-16 mx-auto text-gray-600"></i>
        </div>
        <h3 class="text-xl font-medium text-gray-300 mb-2">No se encontraron recursos</h3>
        <p class="text-gray-500">Intenta cambiar los filtros o el t√©rmino de b√∫squeda</p>
      </div>
    </section>

    <!-- Secci√≥n de recursos relacionados -->
    <section class="mt-16 p-8 rounded-2xl bg-gradient-to-r from-green-900/20 to-blue-900/20 border border-white/10">
      <h3 class="text-2xl font-bold text-white mb-4">üõ†Ô∏è Pr√≥ximos pasos en Backend</h3>
      <p class="text-gray-300 mb-6">
        Una vez que domines estas tecnolog√≠as backend, explora estas √°reas complementarias.
      </p>
      <div class="flex flex-wrap gap-3">
        <a href="/frontend" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors">
          Conectar con Frontend
        </a>
        <a href="/testing" class="px-4 py-2 bg-orange-600 hover:bg-orange-700 text-white rounded-lg transition-colors">
          Testing de APIs
        </a>
        <a href="/mobile" class="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition-colors">
          APIs para Mobile
        </a>
      </div>
    </section>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Initialize Feather icons
      if (typeof feather !== 'undefined') {
        feather.replace();
      }
      
      // Initialize filters using shared functionality
      if (typeof window.initializeFilters === 'function') {
        window.initializeFilters();
      } else {
        // Fallback initialization if shared script not loaded
        setTimeout(() => {
          if (typeof window.initializeFilters === 'function') {
            window.initializeFilters();
          }
        }, 100);
      }
    });
  </script>
</Layout>